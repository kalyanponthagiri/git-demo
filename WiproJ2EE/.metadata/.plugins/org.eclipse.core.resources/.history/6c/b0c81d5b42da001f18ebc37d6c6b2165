package com.java.exceptionHandling;

public class ThrowsKeywordSub {
	
	private int a;
	private int b;

	public ThrowsKeywordSub(int a,int b) {
		this.a = a;
		this.b = b;
	}
	
	public int division()  throws ArithmeticException {
		
		if (b == 0) {
            throw new ArithmeticException("Division by zero!");
        }
		
		int ans = a/b;
		
		return ans;
	}

}
